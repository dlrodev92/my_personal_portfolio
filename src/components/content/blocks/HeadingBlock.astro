---
export interface Props {
  block: {
    id: string;
    type: 'heading';
    content: string;
    level: 1 | 2 | 3 | 4 | 5 | 6;
  };
}

const { block } = Astro.props;
const Tag = `h${block.level}` as any;
const anchorId = block.content.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]/g, '');
---

<Tag id={anchorId} class="text-2xl font-bold mb-4 mt-8">
  {block.content}
</Tag>



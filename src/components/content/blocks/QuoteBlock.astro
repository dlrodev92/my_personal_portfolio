---
export interface Props {
  block: {
    id: string;
    type: 'quote';
    content: string;
    author?: string;
    source?: string;
  };
}

const { block } = Astro.props;
---

<blockquote class="my-8">
  <div class="text-lg italic text-gray-700 mb-4">
    "{block.content}"
  </div>
  {(block.author || block.source) && (
    <cite class="text-sm text-gray-500 not-italic">
      â€” {block.author}{block.source && `, ${block.source}`}
    </cite>
  )}
</blockquote>

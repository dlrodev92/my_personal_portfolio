---

   <!-- Focus Areas Grid with Interlaced Effect -->
   <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 w-full">
  {focusAreas.map((area, index) => (
    <div 
      id={area.id}
      class={`group opacity-0 bg-white/80 backdrop-blur-sm rounded-xl 
      p-4 sm:p-6 border border-gray-200 transition-all duration-500 
      hover:shadow-lg hover:scale-105 hover:bg-white/90 
      ${index % 2 === 0 ? 'hover:-rotate-1' : 'hover:rotate-1'}
      hover:z-10 relative`}
    >
      
      <!-- Icons -->
      <div class="flex items-center justify-center gap-2 mb-4 sm:mb-6 relative h-12 sm:h-16">
        {area.icons.map((iconSvg, iconIndex) => (
          <div 
            class={`w-8 h-8 sm:w-12 sm:h-12 text-gray-700 group-hover:text-black 
            transition-all duration-500 ${
              iconIndex === 0 
                ? 'group-hover:translate-x-2 group-hover:scale-110' 
                : 'group-hover:-translate-x-2 group-hover:scale-110'
            } ${
              iconIndex === 1 ? 'group-hover:z-10' : 'group-hover:z-20'
            }`}
            set:html={iconSvg}
          />
        ))}
      </div>
      
      <!-- Title -->
      <h3 class="font-display text-base sm:text-lg md:text-xl font-bold text-black mb-2 sm:mb-3 group-hover:text-black transition-all duration-300 group-hover:translate-x-1">
        {area.title}
      </h3>
      
      <!-- Description -->
      <p class="font-body text-sm sm:text-base text-gray-600 mb-3 sm:mb-4 leading-relaxed group-hover:text-gray-800 transition-colors duration-300">
        {area.description}
      </p>
      
      <!-- Details -->
      <div class="space-y-2 sm:space-y-3">
        <div class="flex flex-wrap gap-1">
          {area.details.split(', ').map((tech, techIndex) => (
            <span class={`font-body text-xs sm:text-sm bg-gray-100 px-2 py-1 rounded text-gray-700 transition-all duration-300 group-hover:bg-gray-200 ${
              techIndex % 2 === 0 ? 'group-hover:translate-y-0.5' : 'group-hover:-translate-y-0.5'
            }`}>
              {tech}
            </span>
          ))}
        </div>
        
        <!-- Footer -->
        <div class="flex items-center justify-between pt-2 sm:pt-3 border-t border-gray-100 group-hover:border-gray-200 transition-colors duration-300">
          <span class="font-body text-xs sm:text-sm text-gray-500 font-medium group-hover:translate-x-1 transition-transform duration-500">
            {area.experience}
          </span>
          <span class="font-body text-xs sm:text-sm bg-yellow-400/20 text-yellow-700 px-2 py-1 rounded font-medium group-hover:bg-yellow-400/30 group-hover:scale-110 group-hover:-translate-x-1 transition-all duration-500">
            {area.highlight}
          </span>
        </div>
      </div>
    </div>
  ))}
</div>



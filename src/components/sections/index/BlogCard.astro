---
interface Blog {
  title: string;
  excerpt: string;
  date: string;
  category: string;
  readTime: number;
  image?: string;
  slug: string;
}

interface Props {
  blog: Blog;
  class?: string;
}

const { blog, class: className } = Astro.props;
---

<article class={`group relative bg-surface-elevated rounded-xl overflow-hidden border border-main transition-all duration-300 hover:shadow-lg hover:scale-105 ${className || ''}`}>
  
  <!-- Image Section -->
  {blog.image ? (
    <div class="relative h-48 overflow-hidden">
      <img 
        src={blog.image} 
        alt={blog.title}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300"></div>
      
      <!-- Floating category badge -->
      <div class="absolute top-4 left-4">
        <span class="font-body text-xs bg-white/90 backdrop-blur-sm text-text-secondary px-3 py-1 rounded-full font-medium border border-white/20">
          {blog.category}
        </span>
      </div>
    </div>
  ) : (
    <!-- Fallback pattern when no image -->
    <div class="relative h-48 bg-gradient-to-br from-interactive to-surface flex items-center justify-center">
      <div class="w-16 h-16 text-text-muted">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <polyline points="14,2 14,8 20,8"/>
          <line x1="16" y1="13" x2="8" y2="13"/>
          <line x1="16" y1="17" x2="8" y2="17"/>
        </svg>
      </div>
      
      <div class="absolute top-4 left-4">
        <span class="font-body text-xs bg-white/90 backdrop-blur-sm text-text-secondary px-3 py-1 rounded-full font-medium">
          {blog.category}
        </span>
      </div>
    </div>
  )}
  
  <!-- Content Section -->
  <div class="p-6">
    
    <!-- Date & Read Time -->
    <div class="flex items-center justify-between mb-3 text-xs text-text-muted">
      <time>
        {new Date(blog.date).toLocaleDateString('en-US', { 
          month: 'short', 
          day: 'numeric' 
        })}
      </time>
      <span>{blog.readTime} min read</span>
    </div>
    
    <!-- Title -->
    <h4 class="font-display text-lg font-bold text-primary mb-3 group-hover:text-text-secondary transition-colors duration-300 leading-snug line-clamp-2">
      {blog.title}
    </h4>
    
    <!-- Excerpt -->
    <p class="font-body text-sm text-text-muted leading-relaxed line-clamp-3 mb-4">
      {blog.excerpt}
    </p>
    
    <!-- Read More Link -->
    <a 
      href={`/blog/${blog.slug}`}
      class="inline-flex items-center font-body text-sm font-medium text-primary hover:text-text-secondary transition-colors duration-300"
    >
      Read more
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-1">
        <path d="M7 17L17 7"/>
        <path d="M7 7h10v10"/>
      </svg>
    </a>
  </div>
  
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
---
// Related posts and series navigation
const { posts, series } = Astro.props;

function formatDate(dateString) {
  return new Date(dateString).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
}
---

<section class="px-4 sm:px-6 lg:px-8 mb-16">
  <div class="max-w-4xl mx-auto">
    
    <!-- Series Navigation (if exists) -->
    {series && (
      <div class="mb-12">
        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="font-display text-lg font-bold text-black mb-2">{series.name}</h3>
              <p class="text-sm text-gray-600">Part {series.part} of {series.total}</p>
            </div>
            
            <div class="flex items-center text-yellow-600">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 3h5v5"/>
                <path d="M8 3H3v5"/>
                <path d="M12 22v-8.3a4 4 0 0 0-1.172-2.872L3 3"/>
                <path d="m15 9 6-6"/>
              </svg>
            </div>
          </div>
          
          <!-- Progress Bar -->
          <div class="mb-4">
            <div class="w-full bg-yellow-200 rounded-full h-2">
              <div 
                class="bg-yellow-400 h-2 rounded-full transition-all duration-500" 
                style={`width: ${(series.part / series.total) * 100}%`}
              ></div>
            </div>
          </div>

          <!-- Next Post Link -->
          {series.nextPost && (
            <a 
              href={`/blog/${series.nextPost}`}
              class="inline-flex items-center text-sm font-medium text-yellow-700 hover:text-yellow-800 transition-colors duration-300"
            >
              Next in series: Part {series.part + 1}
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
                <path d="M7 17L17 7"/>
                <path d="M7 7h10v10"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    )}

    <!-- Related Posts -->
    <div>
      <h3 class="font-display text-2xl font-bold text-black mb-8">You might also like</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {posts.map((relatedPost, index) => (
          <article class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200 overflow-hidden transition-all duration-300 hover:shadow-lg hover:bg-white/90">
            
            <!-- Image (if exists) -->
            {relatedPost.image && (
              <div class="relative h-32 overflow-hidden">
                <img 
                  src={relatedPost.image} 
                  alt={relatedPost.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                
                <!-- Category overlay -->
                <div class="absolute top-3 left-3">
                  <span class="text-xs font-medium px-2 py-1 rounded-full bg-white/90 text-gray-700">
                    {relatedPost.category}
                  </span>
                </div>
              </div>
            )}

            <!-- Content -->
            <div class="p-5">
              
              <!-- Metadata -->
              <div class="flex items-center space-x-2 text-xs text-gray-500 mb-3">
                <time>{formatDate(relatedPost.publishedAt)}</time>
                <span>â€¢</span>
                <span>{relatedPost.readTime} min read</span>
              </div>

              <!-- Title & Excerpt -->
              <h4 class="font-display text-lg font-bold text-black mb-2 group-hover:text-gray-800 transition-colors duration-300 leading-snug">
                {relatedPost.title}
              </h4>
              
              <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3">
                {relatedPost.excerpt}
              </p>

              <!-- Read Link -->
              <a 
                href={`/blog/${relatedPost.slug}`}
                class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-black transition-colors duration-300"
              >
                Read post
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-1">
                  <path d="M7 17L17 7"/>
                  <path d="M7 7h10v10"/>
                </svg>
              </a>
            </div>

          </article>
        ))}
      </div>
    </div>

    <!-- Back to Blog CTA -->
    <div class="text-center mt-12">
      <a 
        href="/blog"
        class="inline-flex items-center font-display font-bold bg-black text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition-all duration-300 transform hover:scale-105"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
          <path d="M19 12H5"/>
          <path d="m12 19-7-7 7-7"/>
        </svg>
        View all posts
      </a>
    </div>

  </div>
</section>

<style>
  /* Line clamp for excerpt truncation */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
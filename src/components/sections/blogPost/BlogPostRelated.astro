---
const { posts, series = null } = Astro.props;

// Siempre fuerza a array
const safePosts = Array.isArray(posts) ? posts : [];

function formatDate(dateString) {
  if (!dateString) return "";
  try {
    return new Date(dateString).toLocaleDateString("en-US", {
      month: "short",
      day: "numeric",
      year: "numeric",
    });
  } catch (e) {
    console.error("❌ Error formatting date:", dateString, e);
    return "";
  }
}
---

<section class="px-4 sm:px-6 lg:px-8 mb-16">
  <div class="max-w-4xl mx-auto">
    <!-- Series Navigation -->
    {series && (
      <div class="mb-12">
        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="font-display text-lg font-bold text-black mb-2">
                {series.name}
              </h3>
              <p class="text-sm text-gray-600">
                Part {series.part} of {series.total}
              </p>
            </div>
          </div>
          <div class="mb-4">
            <div class="w-full bg-yellow-200 rounded-full h-2">
              <div
                class="bg-yellow-400 h-2 rounded-full transition-all duration-500"
                style={`width: ${(series.part / series.total) * 100}%`}
              ></div>
            </div>
          </div>
          {series.nextPost && (
            <a
              href={`/blog/${series.nextPost}`}
              class="inline-flex items-center text-sm font-medium text-yellow-700 hover:text-yellow-800 transition-colors duration-300"
            >
              Next in series: Part {series.part + 1}
            </a>
          )}
        </div>
      </div>
    )}

    <!-- Related Posts -->
    <div>
      <h3 class="font-display text-2xl font-bold text-black mb-8">
        You might also like
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {safePosts.length > 0 ? (
          safePosts.map((relatedPost) => (
            <article
              class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200 overflow-hidden transition-all duration-300 hover:shadow-lg hover:bg-white/90"
            >
              {relatedPost.image && (
                <div class="relative h-32 overflow-hidden">
                  <img
                    src={relatedPost.image}
                    alt={relatedPost.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}
              <div class="p-5">
                <div class="flex items-center space-x-2 text-xs text-gray-500 mb-3">
                  <time>{formatDate(relatedPost.publishedAt)}</time>
                  <span>•</span>
                  <span>{relatedPost.readTime} min read</span>
                </div>
                <h4 class="font-display text-lg font-bold text-black mb-2 group-hover:text-gray-800 transition-colors duration-300 leading-snug">
                  {relatedPost.title}
                </h4>
                <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3">
                  {relatedPost.excerpt}
                </p>
                <a
                  href={`/blog/${relatedPost.slug}`}
                  class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-black transition-colors duration-300"
                >
                  Read post
                </a>
              </div>
            </article>
          ))
        ) : (
          <p class="text-gray-500 text-sm">No related posts available.</p>
        )}
      </div>
    </div>

    <!-- Back to Blog CTA -->
    <div class="text-center mt-12">
      <a
        href="/blog"
        class="inline-flex items-center font-display font-bold bg-black text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition-all duration-300 transform hover:scale-105"
      >
        Back to all posts
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

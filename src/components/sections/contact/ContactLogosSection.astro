---
interface Company {
  name: string;
  logo: string;
  alt: string;
}
interface Props {
  companies: Company[];
  title?: string;
}

const { companies, title } = Astro.props;
---

<section class="py-12 px-4 lg:px-8 bg-gray-50/50">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-8">
      <p class="text-sm uppercase tracking-widest text-gray-500 font-medium">
        {title}
      </p>
    </div>

    <div class="flex items-center justify-center flex-wrap gap-8 lg:gap-12 opacity-60 hover:opacity-80 transition-opacity duration-300">
      {companies.map((company) => (
        <div class="grayscale hover:grayscale-0 transition-all duration-300 hover:scale-105">
          <img 
            src={company.logo}
            alt={company.alt}
            class="h-8 lg:h-10 w-auto object-contain filter"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>

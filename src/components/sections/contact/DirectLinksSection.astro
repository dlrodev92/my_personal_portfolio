---
// Direct Contact Links Section
const contactLinks = [
  {
    label: 'Email',
    icon: '📧',
    value: 'david@example.com',
    href: 'mailto:david@example.com',
    description: 'For serious inquiries and detailed discussions'
  },
  {
    label: 'GitHub',
    icon: '🐙',
    value: 'github.com/davidlopez',
    href: 'https://github.com/davidlopez',
    description: 'Check out my code and contributions'
  },
  {
    label: 'LinkedIn',
    icon: '🔗',
    value: 'linkedin.com/in/davidlopez',
    href: 'https://linkedin.com/in/davidlopez',
    description: 'Professional networking and career stuff'
  },
  {
    label: 'TikTok',
    icon: '🎥',
    value: '@animecloudbuilder',
    href: 'https://tiktok.com/@animecloudbuilder',
    description: 'Coding tips mixed with anime references'
  }
];
---

<section class="py-20 px-4 sm:px-6 lg:px-8 bg-surface/30">
  <div class="max-w-4xl mx-auto">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="font-display text-3xl font-bold text-black mb-4">
        🔗 Prefer Direct Contact?
      </h2>
      <p class="font-body text-lg text-text-muted">
        For introverts, recruiters, or anyone who just wants to skip the form
      </p>
    </div>
    
    <!-- Contact Links Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {contactLinks.map((link, index) => (
        <a 
          href={link.href}
          target={link.href.startsWith('http') ? '_blank' : '_self'}
          rel={link.href.startsWith('http') ? 'noopener noreferrer' : ''}
          class="contact-link-card group"
        >
          <div class="flex items-start space-x-4">
            <div class="text-3xl mt-1 group-hover:scale-110 transition-transform duration-300">
              {link.icon}
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-display text-lg font-bold text-black group-hover:text-text-secondary transition-colors">
                {link.label}
              </h3>
              <p class="font-body text-text-primary break-all group-hover:text-text-secondary transition-colors">
                {link.value}
              </p>
              <p class="font-body text-sm text-text-muted mt-1">
                {link.description}
              </p>
            </div>
            <div class="text-text-muted group-hover:text-black transition-colors">
              →
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <!-- Response Time Info -->
    <div class="mt-12 text-center">
      <div class="bg-white/60 backdrop-blur-sm rounded-xl p-6 border border-border max-w-2xl mx-auto">
        <div class="text-2xl mb-3">⚡</div>
        <h3 class="font-display text-lg font-bold text-black mb-2">
          Response Times
        </h3>
        <div class="space-y-2 font-body text-sm text-text-secondary">
          <p>📧 Email: Within 24 hours</p>
          <p>🔗 LinkedIn: 1-2 days (I check it weekly)</p>
          <p>🐙 GitHub: For code questions and issues</p>
          <p>🎥 TikTok: For memes and casual chat</p>
        </div>
      </div>
    </div>
  </div>
</section>

   explanation: 'Get a complete, modern website delivered in just 3 days. Includes design, development, and deployment.',
   features: [
     'Modern responsive design',
     'SEO optimized',
     'Contact forms & analytics',
     'Ready to launch'
   ],
   icon: 'M13 10V3L4 14h7v7l9-11h-7z',
   bgColor: 'bg-yellow-400',
   textColor: 'text-black',
   delivery: '3 days',
   pricing: 'Very affordable'
 },
 {
   id: 'full-stack-apps',
   title: 'Complete Web Applications',
   subtitle: 'Full-Stack Solutions',
   description: 'Custom web applications that handle everything - from user accounts to payments, data management, and beyond.',
   explanation: 'Think Netflix, Airbnb, or your banking app. Complete systems where users can sign up, interact, and manage data.',
   features: [
     'User authentication & accounts',
     'Database & data management',
     'Payment processing',
     'Admin dashboards'
   ],
   icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
   bgColor: 'bg-text-primary',
   textColor: 'text-black',
   delivery: '2-8 weeks',
   pricing: 'Custom quote'
 },
 {
   id: 'ai-integration',
   title: 'AI Business Solutions',
   subtitle: 'Smart Automation',
   description: 'Add AI superpowers to your business. Automate tasks, analyze data, or create intelligent customer experiences.',
   explanation: 'From chatbots that answer customer questions to AI that analyzes your sales data and suggests improvements.',
   features: [
     'Custom chatbots',
     'Data analysis & insights',
     'Process automation',
     'Customer service AI'
   ],
   icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
